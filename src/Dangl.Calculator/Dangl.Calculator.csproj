<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Package to evaluate mathematical formulas from strings</Description>
    <Copyright>(c) 2016 Georg Dangl</Copyright>
    <AssemblyTitle>Dangl.Calculator</AssemblyTitle>
    <VersionPrefix>1.0.3</VersionPrefix>
    <Authors>Georg Dangl</Authors>
    <TargetFrameworks>netstandard1.3;net46</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Dangl.Calculator</AssemblyName>
    <PackageId>Dangl.Calculator</PackageId>
    <PackageReleaseNotes>1.0.3: Target NETStandard 1.3</PackageReleaseNotes>
    <PackageIconUrl>https://blog.dangl.me/media/1114/gd_icon_256.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/GeorgDangl/Dangl.Calculator</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/GeorgDangl/Dangl.Calculator/blob/master/LICENSE.md</PackageLicenseUrl>
    <NetStandardImplicitPackageVersion Condition=" '$(TargetFramework)' == 'netstandard1.3' ">1.6.1</NetStandardImplicitPackageVersion>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Antlr4.CodeGenerator" Version="4.5.4-beta001">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.3' ">
    <PackageReference Include="Antlr4.Runtime" Version="4.5.4-beta001" />
  </ItemGroup>

  <Target Name="PrecompileScript" BeforeTargets="BeforeBuild" Condition=" '$(IsCrossTargetingBuild)' != 'true' ">
    <Exec Command="BuildANTLR.bat" />
  </Target>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net46' ">
    <PackageReference Include="Antlr4.Runtime" Version="4.5.3" />
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

</Project>
